<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black_for_hint"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_margin="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/bachground_linear"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bachground_layer"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                >

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:text="Pomp power"
                    android:textColor="@color/Blue_v1"
                    android:textSize="22dp"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:paddingStart="10dp"/>

                <ToggleButton
                    android:id="@+id/btn_on_off"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/img_weather"
                    android:layout_width="180dp"
                    android:layout_height="200dp"
                    android:src="@drawable/storm"/>

                <TextView
                    android:id="@+id/txt_status"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textStyle="bold"
                    android:text="Storm today"
                    android:textColor="@color/Black2"
                    android:textSize="25dp"
                    android:gravity="center"/>

            </LinearLayout>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/bachground_linear">
            <LinearLayout
                android:layout_width="177dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_margin="10dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/thermometer"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textStyle="bold"
                android:text="Humidity"
                android:textSize="25dp"
                android:textColor="@color/Blue_v2"
                android:gravity="center"/>
                <TextView
                    android:id="@+id/txt_humidity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:text="50%"
                    android:textSize="35dp"
                    android:textColor="@color/Black2"
                    android:gravity="center"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="177dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:src="@drawable/humidity"
                    android:layout_margin="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textStyle="bold"
                    android:text="Temperature"
                    android:textColor="@color/Blue_v2"
                    android:textSize="25dp"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/txt_temperature"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:text="25Â°C"
                    android:textSize="35dp"
                    android:textColor="@color/Black2"
                    android:gravity="center"/>

            </LinearLayout>
        </LinearLayout>




        <Button
            android:id="@+id/btn_history"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="My history"
            android:textStyle="bold"
            android:textSize="18dp"
            android:background="@drawable/bachground_button_blu"/>
        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Logout"
            android:textStyle="bold"
            android:textSize="18dp"
            android:background="@drawable/bachground_button_blu"
            android:layout_marginTop="5dp"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>